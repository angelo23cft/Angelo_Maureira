@model IEnumerable<Angelo_Maureira.Models.Ubicacion>

@{
    ViewData["Title"] = "Lista de Ubicaciones";
}

<div class="container mt-5">
    <h1 class="text-primary">Lista de Ubicaciones</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Crear Nueva Ubicación
        </a>
    </p>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-2">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
