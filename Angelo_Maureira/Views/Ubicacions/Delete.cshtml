@model Angelo_Maureira.Models.Ubicacion

@{
    ViewData["Title"] = "Eliminar Ubicación";
}

<div class="container mt-5">
    <h1 class="text-danger">Eliminar Ubicación</h1>
    <h3 class="text-warning">¿Estás seguro de que deseas eliminar esta ubicación?</h3>
    <div class="mt-4">
        <h4 class="text-secondary">Detalles de la Ubicación</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-start gap-3">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </form>
</div>
