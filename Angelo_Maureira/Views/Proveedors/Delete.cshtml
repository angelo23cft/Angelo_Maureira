@model Angelo_Maureira.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<div class="container mt-5">
    <h1 class="text-danger">Eliminar Proveedor</h1>
    <p class="text-muted">¿Estás seguro de que deseas eliminar este proveedor? Esta acción no se puede deshacer.</p>
    <hr />
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-warning">Información del Proveedor</h4>
            <dl class="row mt-4">
                <dt class="col-sm-3 text-secondary">RUT:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rut)</dd>

                <dt class="col-sm-3 text-secondary">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 text-secondary">Ubicación ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UbicacionId)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>
