@model Angelo_Maureira.Models.Proveedor

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<div class="container mt-5">
    <h1 class="text-primary">Detalles del Proveedor</h1>
    <hr />
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Proveedor Información</h4>
            <dl class="row mt-4">
                <dt class="col-sm-3 text-secondary">RUT:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rut)</dd>

                <dt class="col-sm-3 text-secondary">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 text-secondary">Ubicación ID:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UbicacionId)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>
