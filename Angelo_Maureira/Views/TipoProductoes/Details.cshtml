@model Angelo_Maureira.Models.TipoProducto

@{
    ViewData["Title"] = "Detalles del Tipo de Producto";
}

<div class="container mt-5">
    <h1 class="text-primary">Detalles del Tipo de Producto</h1>
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            Información General
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>
</div>
