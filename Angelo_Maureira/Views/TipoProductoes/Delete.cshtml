@model Angelo_Maureira.Models.TipoProducto

@{
    ViewData["Title"] = "Eliminar Tipo de Producto";
}

<div class="container mt-5">
    <h1 class="text-danger">Eliminar Tipo de Producto</h1>
    <h3>¿Estás seguro de que deseas eliminar este elemento?</h3>
    <div class="card border-danger mt-4">
        <div class="card-header bg-danger text-white">
            Detalles del Tipo de Producto
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>
        </form>
    </div>
</div>
